"use client"

import { useState } from "react"
import { InboxScreen } from "@/components/inbox-screen"
import { ThemeProvider } from "@/components/theme-provider"

enum Screen {
  BlueScreen = 0,
  WhiteDotsScreen = 1,
  InboxScreen = 2,
}

export default function Home() {
  const [currentScreen, setCurrentScreen] = useState<Screen>(Screen.BlueScreen)

  const handleBlueScreenClick = () => {
    setCurrentScreen(Screen.WhiteDotsScreen)
  }

  const handleWhiteDotsClick = () => {
    setCurrentScreen(Screen.InboxScreen)
  }

  return (
    <ThemeProvider attribute="class" defaultTheme="light" enableSystem>
      <div className="min-h-screen flex items-center justify-center">
        {currentScreen === Screen.BlueScreen && (
          <div
            className="absolute inset-0 bg-blue-600 flex items-center justify-center cursor-pointer text-white text-xl md:text-2xl font-bold p-4"
            onClick={handleBlueScreenClick}
          >
            <div className="text-center">
              <div className="mb-2">Click to reveal the file...</div>
              <div className="text-sm md:text-base opacity-75">Tap anywhere on mobile</div>
            </div>
          </div>
        )}

        {currentScreen === Screen.WhiteDotsScreen && (
          <div
            className="absolute inset-0 bg-blue-600 flex items-center justify-center cursor-pointer"
            onClick={handleWhiteDotsClick}
            style={{
              backgroundImage: "radial-gradient(white 1px, transparent 1px)",
              backgroundSize: "20px 20px",
            }}
          >
            <div className="text-white text-xl md:text-2xl font-bold p-4 bg-black bg-opacity-50 rounded text-center">
              <div className="mb-2">Click the white dots to open inbox...</div>
              <div className="text-sm md:text-base opacity-75">Tap anywhere on mobile</div>
            </div>
          </div>
        )}

        {currentScreen === Screen.InboxScreen && (
          <div className="absolute inset-0">
            <InboxScreen />
          </div>
        )}
      </div>
    </ThemeProvider>
  )
}
