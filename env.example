# CursorFlow - Root Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# PROJECT CONFIGURATION
# =============================================================================
PROJECT_NAME=CursorFlow
PROJECT_VERSION=1.0.0
NODE_ENV=development

# =============================================================================
# APPLICATION URLs
# =============================================================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001
API_BASE_URL=http://localhost:3001/api

# =============================================================================
# AI DESIGN CRITIQUE CONFIGURATION
# =============================================================================

# Primary LLM Provider
PRIMARY_LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Alternative LLM Providers
GROQ_API_KEY=your-groq-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Analysis Configuration
DEFAULT_AUDIT_TYPE=comprehensive
MAX_ANALYSIS_TIME=60000
ENABLE_CACHING=true

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================

# v0 Platform
V0_API_KEY=v0_your_v0_api_key
V0_BASE_URL=https://api.v0.dev

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG=false
ENABLE_HOT_RELOAD=true
SKIP_BUILD_STATIC_CHECK=false

# =============================================================================
# DEPLOYMENT
# =============================================================================
DEPLOYMENT_ENV=development
ENABLE_ANALYTICS=false 